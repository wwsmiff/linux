command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

# Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[volume]
label=Volume:
command=/home/arvk/.config/i3blocks/volume.sh
interval=once
signal=1

[brightness]
label=Brightness:
command=echo $(brightnessctl get | awk '{printf "%d", $1 / 255 * 100}')%
interval=once
signal=2


# The battery instance defaults to 0.
[battery]
label=BAT
#label=âš¡
#instance=1
interval=30

[powerprofiles]
command=powerprofilesctl get
interval=once
signal=1


# Date Time
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

